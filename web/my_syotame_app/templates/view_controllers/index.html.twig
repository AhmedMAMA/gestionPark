{% extends 'base.html.twig' %}

{% block title %}Syotame{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Les Places Disponibles</h1>
    
    <table class="table table-striped table-hover text-center">
        <thead class="table-light">
          <tr>
            <th scope="col">Agency</th>
            <th scope="col">Address</th>
            <th scope="col">Handicap Place</th>
            <th scope="col">Simple Place</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            {% for element in freeplace %}
            <tr>
                <td>{{ element.agency }}</td>
                <td>{{ element.address }}</td>
                <td>{{ element.HandPlace }}</td>
                <td>{{ element.FullPlace - element.occupied }}</td>
                <td>
                    <a href="#" class="btn btn-outline-primary btn-sm">Reserve</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
